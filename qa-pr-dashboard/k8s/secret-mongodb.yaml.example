# Example MongoDB Secret
# Copy this file to secret-mongodb.yaml and update with your actual MongoDB connection string
# DO NOT commit secret-mongodb.yaml to git!

apiVersion: v1
kind: Secret
metadata:
  name: mongodb-secret
  namespace: qa-pr-dashboard
type: Opaque
stringData:
  mongodb-uri: "mongodb+srv://username:password@cluster.mongodb.net/qa_pr_dashboard?retryWrites=true&w=majority"
  # Or for self-hosted:
  # mongodb-uri: "mongodb://username:password@mongodb-service:27017/qa_pr_dashboard"
